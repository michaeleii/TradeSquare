<article class="p-8 bg-offwhite rounded-md sm:text-center mb-8">
  <img
    class="w-[290px] h-[200px] sm:mx-auto sm:w-[580px] sm:h-[400px]"
    src="/images/squares/square<%= square.id %>.jpg"
    alt=""
  />
  <h3 class="mt-4"><%= square.name %></h3>
  <p class="my-2"><%= square.description %></p>
  <button class="join-btn btn-primary rounded-full py-2.5 px-5 mt-2 mr-2">Join</button>
  <a href="/squares/postcomponent">
    <button
      class="bg-white text-primary rounded-full py-2 px-6 mt-2 border-2 border-solid border-primary"
    >
      See More
    </button>

  </a>
</article>
