<article class="p-8 bg-offwhite rounded-md mb-8 drop-shadow-lg">
  <div class="flex items-center gap-2 mb-3">
    <img
      class="w-[35px] h-[35px] rounded-full object-cover"
      src="/images/users/user<%= post.userId %>.jpg"
      alt=""
    />
    <div class="">
      <p class="font-medium"><%= post.user.f_name %></p>
      <p class="font-normal text-sm">
        <%= new Date(post.date).toLocaleString("en-US", { month: "short", day:
        "numeric", year: "numeric", }) %>
      </p>
    </div>
  </div>
  <div>
    <img class="rounded-lg w-[900px] mx-auto" src="<%= post.imgUrl %>" alt="" />
  </div>
  <div>
    <p class="text-md mt-5"><%= post.description %></p>
