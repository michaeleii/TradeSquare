<div class="flex flex-col px-5">
  <img
    class="mx-auto rounded-full w-[200px] h-[200px] object-cover"
    src="/images/squares/square<%= square.id %>.jpg"
    alt="Square Img"
    srcset=""
  />
  <div class="text-center">
    <h1 class="pt-5"><%= square.name %></h1>
    <p class="text-grey px-2 py-5"><%= square.description %></p>
  </div>

  <div class="flex flex-col md:flex-row md:items-center gap-5 justify-center">
    <% if (user) { %>
    <button
    id="joinBtn"
      class="btn-primary rounded-full w-full md:w-[340px] <%= square.joined && "hidden" %>"
      data-square-id="<%= square.id %>"
    >
      Join
    </button>
    <button
    id="unjoinBtn"
      class="btn-danger rounded-full w-full md:w-[300px] <%= !square.joined && "hidden" %>"
      data-square-id="<%= square.id %>"
    >
      Leave
    </button>
    <a href="/squares/create/<%= square.id %>">
      <button
      id="createPostBtn"
        class="btn-primary rounded-full w-full md:w-[300px] h-[50] <%= !square.joined && "hidden" %>"
      >
        Create New Post
      </button>
    </a>
    <% } %>
  </div>
</div>
