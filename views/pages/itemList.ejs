<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/styles/styles.css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="/images/icons/favicon.svg" />
    <title>All Items</title>
  </head>
  <body class="bg-bkg text-content">
    <div class="mx-auto w-[90%] md:w-[50%]">
      <%- include('../components/header.ejs', {isAuthenticated}) %>
    </div>
    <div class="mt-5"><%- include('../components/searchBar.ejs') %></div>
    <div class="flex flex-col items-center mt-10" id="itemsContainer">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-5 justify-center">
        <h1 id="headingTitle" class="col-span-2 md:col-span-4">All Items</h1>
        <h3 id="noItemsMsg" class="hidden">No items found</h3>
        <% items.forEach(item => { %>
        <a href="/items/view/<%= item.id %>" class="item-card">
          <%- include('../components/itemCard.ejs', {item}) %>
        </a>
        <% }) %>
      </div>
    </div>
    <%- include('../components/navigationBar', {user}) %>
    <script src="/src/search.js" type="module"></script>
  </body>
</html>
