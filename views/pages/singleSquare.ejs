<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/styles/styles.css" rel="stylesheet" />
    <title>Post Component</title>
  </head>
  <body>
    <div>
      <%- include('../components/Square_Title_and_Description.ejs') %>
    </div>
    <div class="flex flex-col items-center mt-10" id="postsContainer">
      <div class="grid grid-cols-1 gap-5 justify-center">
        <h1 class="col-span-1">Overview</h1>
        <% posts.forEach(post => { %> <%- include('../components/postCard',
        {post}) %> <% }) %>
      </div>
    </div>
  </body>
</html>
